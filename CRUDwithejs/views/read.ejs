<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="min-w-full min-h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-5">
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All User</h1>
         <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
                 <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 rounded-lg">
                    <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                </div>
                <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex gap-3 mt-8">
                    <a class="text-zinc-600" href="/edit/<%= user._id %>">Edit User</a>
                    <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                </div>
            </div>
        <% }) %>
           <% }else{ %>
            <h1 class="text-zinc-600">no users yet</h1>
          <% } %>
         </div>
    </div>
    
</body>
</html>